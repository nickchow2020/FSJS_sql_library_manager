extends layout
block content
    form(method="POST") 
        p
            label(for="title") Title 
            input(name="title" type="text" id="title" value=currentData.title)
        p
            label(for="author") Author 
            input(name="author" type="text" id="author" value=currentData.author)
        p
            label(for="genre") Genre 
            input(name="genre" type="text" id="genre" value=currentData.genre)
        p
            label(for="year") Year 
            input(name="year" type="text" id="year" value=currentData.year)
        p
            input(type="submit" value="Update Book")

    form(method="post" action=`/books/${currentData.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
        p 
            a(class="button" href="/books") Cancel
        p   
            input(type="submit" value="Delete Book")
